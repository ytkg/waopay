<% if @error %>
  $('.modal-body .amount').html('<%= @error %>')
<% else %>
  $('.modal-body .amount').html('<%= number_to_currency(@amount) %>')
  $('.modal-body .pay').html('<%= "#{@user.name}さん" %>')
  $('#order_receiving_user_id').val('<%= @user.id %>')
  $('#order_amount').val('<%= @amount %>')
<% end %>
$('button#openPayModalButton').click()
