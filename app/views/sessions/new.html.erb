<div class='text-center'>
  <h1 class='h3 mt-4 mb-0'>ログイン画面</h1>
  <% if flash[:danger] %>
    <div class="alert alert-danger mt-3 form-signin" role="alert">
      <%= flash[:danger]  %>
    </div>
  <% end %>

  <%= form_for :session, url: login_path, html: { class: 'form-signin' } do |f| %>
    <div class='form-group'>
      <%= f.text_field :name, class: 'form-control', placeholder: 'ユーザーID' %>
    </div>
    <div class='form-group'>
      <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
    </div>
    <%= f.submit 'ログイン', class: 'btn btn-secondary btn-block' %>
  <% end %>
  <p>ユーザー登録がお済みでない方は<%= link_to 'こちら', signup_path %></p>
</div>
