<div class='text-center'>
  <h1 class='h3 mt-4 mb-0'>ユーザー登録画面</h1>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <div id="error_explanation" class="alert alert-danger mt-3 form-signin">
        <%= message %>
      </div>
    <% end %>
  <% end %>
  
  <%= form_for @user, url: signup_path, html: { class: 'form-signin' } do |f| %>
    <div class='form-group text-left'>
      <%= f.label :name, 'ユーザーID' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='form-group text-left'>
      <%= f.label :password, 'パスワード' %>
      <%= f.text_field :password, class: 'form-control' %>
    </div>
    <div class='form-group text-left'>
      <%= f.label :password_confirmation, 'パスワード(確認用)' %>
      <%= f.text_field :password_confirmation, class: 'form-control' %>
    </div>
    <%= f.submit '登録', class: 'btn btn-secondary btn-block' %>
  <% end %>
  <p>ユーザー登録がお済みの方は<%= link_to 'こちら', login_path %></p>
</div>
